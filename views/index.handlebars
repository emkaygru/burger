<div class="container">

  <div class="jumbotron">

    <h1>Order Your Burger!</h1>
    <p>During COVID-19, All Orders are Pickup Only...Sorry BITCHES</p>
  
  
    <h2>Burgers READY TO BE YEETED</h2>
    <ul>

      
      {{#each burgers}}
      {{#unless devoured}}

      <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
      <button class="eatburger btn btn-warning" type="button" id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
      <hr>
      {{/each}}
      {{/unless}}
    </ul>


    <h2>MEAT THAT HATH BEEN YEETH</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}

      <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
      <button class="trash btn btn-warning" type="button" id="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
      <hr>
      {{/if}}
      {{/each}}

    </ul>

    <br>
   <form class="create-form">
     <div class="form-group">
       <label for="newburger">Order Fresh Sandwich</label>
        <input type="text" id="ca" name="name">
     </div>

    <div class="form-group">
      <label for="newburger">YEET Da MEAT?</label>
      <input type="radio" name="newburger" value="0">EAT IT!YEET IT! GET IN MAH BELLY! <br>
      <input type="radio" name="devoured" value="1">OH NO ALL GONE!
    </div>

    <button type="submit">Add Burger</button>
   </form>

  </div>






</div>
