<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <img src="" alt="burgerImg" class="burgerImg">
      <h1>Eat Da Meat!</h1>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center">
        <form action="/burgers/create" method="POST">
          <input type="text" class="form-control" name="burgerName" id=""> 
          <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>

        </form>
        <p>Please enter the burger you want to eat and click the "Submit" button. </p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 text-center" class="sidebar">
      <div class="row">
        {{#each burger}}
        {{#unless devoured}}
        <div class="col-xs-9 text-center">
          <pre>{{this.id}}. {{this.burger_name}}</pre>
        </div>
        <div class="col-xs-3">
          <form action="/burgers/update?_method=PUT" method="POST" class="">
            <input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
            <button type="submit" class="btn btn-default">YEET THE MEAT</button>
          </form>
        </div>
      </div>
    </div>
  </div>


</div>