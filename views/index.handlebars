<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <img src="/assets/img/burger.png" alt="burgerImg" class="burgerImg">
      <h1>Eat Da Meat!</h1>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center">
        <form class="create-form">
          <input type="text" class="form-control" name="burgerName" id="burgerName"> 
          <button type="submit" class="btn btn-primary submit-btn" id="addBurger">Submit</button>

        </form>
        <p>Please enter the burger you want to eat and click the "Submit" button. </p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 text-center" class="sidebar">
      <div class="row">
        {{#each burger}}
        {{#unless devoured}}
        <div class="col-xs-9 text-center">
          <pre>{{this.id}}. {{this.burger_name}}</pre>
        </div>
        <div class="col-xs-3">
          <form class="create-form">
            <input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
            <button type="submit" class="btn btn-default" id="eatBurger">YEET THE MEAT</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-xs-6 text-center" class="sidebar">
      {{#each burger}}
      {{#if devoured}}
      <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>